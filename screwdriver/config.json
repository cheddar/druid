{
  "version": 2,
  "shared": {},
  "jobs": {
    "component": {
      "build": {
        "publish": {
          "task": "dist-install",
          "branch": "test",
          "required": true,
          "dir": ".",
          "yicf": [
            "package/kloepper_scratch.yicf"
          ]
        }
      },
      "triggers": [ "promote-build" ]
    },
    "promote-build": {
      "build": {
        "clean": {
          "task": "none"
        },
        "extest": {
          "task": "script",
          "command": "git config remote.origin.url | grep '^git@git.corp.yahoo.com:kloepper/druid.git$' > /dev/null",
          "copy_files_from": ".\/screwdriver\/test_results"
        },
        "promote": {
          "task": "dist-setbranch",
          "package": "kloepper_scratch2",
          "from": "test",
          "to": "current"
        }
      }
    }
  }
}
